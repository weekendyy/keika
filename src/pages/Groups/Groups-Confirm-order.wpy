<template>
  <view class="Confirm_order">
    <view class="evaluate" wx:if="{{groupsData.status == 2}}">
      <image src="./images/icon_evaluate.png"></image>
      <text>购买成功</text>
    </view>
    <view class="Confirm_header {{groupsData.status == 1 ? 'active': ''}}" wx:if="{{groupsData.status == 1 && groupsData.address_options == 1}}">
      <view class="no-address" wx:if="{{!AddressInfo.shipping_name}}" @tap="getAddress">
        <image src="./images/icon_address.png"></image>
        <text>选择添加收货地址</text>
      </view>
      <view class="address-wrapper" wx:if="{{AddressInfo.shipping_name}}" @tap="getAddress">
        <view class="user-info">
          <image src="./images/icon_address.png"></image>
          <text>{{AddressInfo.shipping_name}}</text>
          <text>{{AddressInfo.shipping_tel}}</text>
        </view>
        <view class="address">
          <text class="address-text">地址：</text>
          <view class="address-content">{{AddressInfo.shipping_province}}{{AddressInfo.shipping_city}}{{AddressInfo.shipping_area}}{{AddressInfo.shipping_street}}</view>
        </view>
      </view>
    </view>
    <view class="tel-wrapper" wx:if="{{groupsData.status == 1 }}">
      <text>手机号(必填)</text>
      <input type="number" placeholder-class="telPlaceholder" value="{{real_tel}}" @input="phoneInput" maxlength="11"  placeholder="请填写手机号,方便商家验证"/>
    </view>
    <view class="Confirm_main">
      <view class="main_header">
        <text>购物清单</text>
      </view>
      <view class="goods">
        <view class="goods_pic">
          <image src="{{groupsData.main_img}}"></image>
        </view>
        <view class="goods_name">
          <text>{{groupsData.goods_name}}</text>
        </view>
        <view class="goods_Price">
          <text>¥{{groupsData.original_price}}</text>
          <text>¥{{groupsData.discount_price}}</text>
          <text>x{{groupsData.goods_num}}</text>
        </view>
      </view>
      <view class="discount">
        <view class="total">
          <text>商品总价</text>
          <text>￥{{groupsData.original_price}}</text>
        </view>
        <view class="Member">
          <text>优惠折扣</text>
          <text>-￥{{((groupsData.original_price * 100) - (groupsData.pay_price *  100))/100}}</text>
        </view>
        <view class="Actual">
          <text>订单总价</text>
          <text>￥{{groupsData.pay_price}}</text>
        </view>
      </view>
      <view class="payment">
        <text>实付款</text>
        <text>￥{{groupsData.pay_price}}</text>
      </view>
    </view>
    <view class="Code-wrapper">
      <view>
        <text>订单编号: </text>
        <text>{{groupsData.order_num}}</text>
      </view>
      <view>
        <text>下单时间：</text>
        <text>{{groupsData.create_time}}</text>
      </view>
    </view>
    <view class="footer">
      <text class="pay-text">实付:</text>
      <text class="pay-money">￥{{groupsData.pay_price}}</text>
      <text wx:if="{{groupsData.status == 1}}" class="pay-btn {{payState == true ? '' : 'disabled'}}" @tap="buy">立即付款</text>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  import AddressModel from '../../utils/address'
  import Groups from './Api/Groups.Api'
  export default class Index extends wepy.page {
    config = {
      navigationBarTitleText: '确定订单',
      navigationBarBackgroundColor: '#faf9f9'
    }
    data = {
      AddressInfo: {
        shipping_name:'',
        shipping_postcode:'',
        shipping_province:'',
        shipping_city:'',
        shipping_area:'',
        shipping_street:'',
        shipping_tel:''
      },
      orderId: '',
      goods_info: '',
      requirePhone: '',
      payState: true,
      groupsData: null,
      groupsPay_type: null,
      real_tel:''
    }
    methods = {
      getAddress(){
        if(this.groupsData.status != 1){
          return false
        }
        let that = this;
        wx.chooseAddress({
          success: function (res) {
            that.AddressInfo.shipping_name = res.userName
            that.AddressInfo.shipping_postcode = res.postalCode
            that.AddressInfo.shipping_province = res.provinceName
            that.AddressInfo.shipping_city = res.cityName
            that.AddressInfo.shipping_area = res.countyName
            that.AddressInfo.shipping_street = res.detailInfo
            that.AddressInfo.shipping_tel = res.telNumber
            if(!that.payState){
              that.payState = true
            }
            that.$apply()
          }
        })
      },
      phoneInput($event){
         this.requirePhone = $event.detail.value.trim()
      },
      buy(){
        if(Number(this.requirePhone.length) === 0){
          wx.showToast({
            title: '请输入手机号码',
            icon:'loading',
            duration: 1000,
            mask: true,
          })
          return false
        }
        if(Number(this.requirePhone.length) <= 10){
          wx.showToast({
            title: '手机长度不足',
            icon:'loading',
            duration: 1000,
            mask: true,
          })
          return false
        }
        if(!(/^1[345789]\d{9}$/.test(this.requirePhone))){
          wx.showToast({
            title: '手机格式错误',
            icon:'loading',
            duration: 1000,
            mask: true,
          })
          return false;
        }
        let param = {
          orderID: this.orderId,
          shipping_phone: this.requirePhone
        }
        if(this.groupsData.address_options == 1 && this.AddressInfo.shipping_name == ''){
          wx.showToast({
            title: '请填写收货地址',
            icon: 'success',
            duration: 1200
          })
          return false
        }
        if(this.AddressInfo) {
          Object.assign(param,this.AddressInfo)
        }
        this.payState = false
        this.$apply()
        Object.assign(param,{link_tel:this.requirePhone,pay_type:this.groupsPay_type})
        Groups.groupExecPay(param, ResData=>{
          if(ResData.code == 1) {
            Groups.wxPay(ResData.data, ResData=>{
              // 支付成功以后, 跳转到状态页面 把防止重复提交的订单状态变量设置成 true
              if(ResData == 2) {
                this.payState = true
                this.$apply()
                if(this.groupsPay_type == 1){
                  this.$navigate('/pages/Goods/pay-result',);
                  return false
                }
                if(this.groupsPay_type == 2){
                  this.$navigate('/pages/Groups/pay-result',{orderId: this.orderId});
                  return false
                }
              }
              // 取消支付以后,也需要把支付状态变量设置成 true
              if(ResData == 1) {
                this.payState = true
                this.$apply()
              }
            })
          } else {
            wx.showToast({
              title: ResData.message,
              icon:'loading',
              duration: 1500
            })
            this.payState = true
            this.$apply()
          }
        })
      },
    }
    onLoad(options){
      this.orderId = options.orderId
      this.groupsPay_type = options.pay_type
      let _param = {
        orderID: this.orderId,
        pay_type: this.groupsPay_type,
      }
      Groups.getGropusOrderDetail(_param,ResData=>{
        if(ResData.code === 1){
          this.groupsData = ResData.data
          this.AddressInfo.shipping_name = this.groupsData.shipping_name || ''
          this.AddressInfo.shipping_province = this.groupsData.shipping_province || ''
          this.AddressInfo.shipping_city = this.groupsData.shipping_city || ''
          this.AddressInfo.shipping_area = this.groupsData.shipping_area || ''
          this.AddressInfo.shipping_street = this.groupsData.shipping_street || ''
          this.AddressInfo.shipping_tel = this.groupsData.shipping_phone || ''
          this.real_tel = this.groupsData.real_tel || ''
          this.requirePhone = this.groupsData.real_tel || ''
          this.$apply()
        }
      })
    }
  }
</script>

