<template>
  <view class="Confirm_order">
    <view class="evaluate" wx:if="{{goods_info.status == 2}}">
      <image src="./images/icon_evaluate.png"></image>
      <text>等待使用</text>
    </view>
    <view class="Confirm_header {{goods_info.status == 1 ? 'active': ''}}" wx:if="{{choose_address == 1}}">
      <view class="no-address" wx:if="{{!AddressInfo.shipping_name}}"  @tap="getAddress">
        <image src="./images/icon_address.png"></image>
        <text>可以选择添加收货地址</text>
      </view>
      <view class="address-wrapper" wx:if="{{AddressInfo.shipping_name}}" @tap="getAddress">
        <view class="user-info">
          <image src="./images/icon_address.png" class="icon_address"></image>
          <text class="user-info-name">{{AddressInfo.shipping_name}}</text>
          <text class="user-info-tel">{{AddressInfo.shipping_tel}}</text>
        </view>
        <view class="address">
          <text class="address-text">地址：</text>
          <view class="address-content">{{AddressInfo.shipping_province}}{{AddressInfo.shipping_city}}{{AddressInfo.shipping_area}}{{AddressInfo.shipping_street}}</view>
        </view>
      </view>
    </view>
    <view class="tel-wrapper" wx:if="{{goods_info.status == 1 }}">
      <text>手机号(必填)</text>
      <input type="number" placeholder-class="telPlaceholder" value="{{real_tel}}" @input="phoneInput" maxlength="11"  placeholder="请填写手机号,方便商家验证"/>
    </view>
    <view class="Confirm_main">
      <view class="main_header">
        <text>购物清单</text>
      </view>
      <view class="goods">
        <view class="goods_pic">
          <image src="{{goods_info.img}}"></image>
        </view>
        <view class="goods_name">
          <text>{{goods_info.title}}</text>
        </view>
        <view class="goods_Price">
          <text>¥{{goods_info.price}}</text>
          <text>¥{{goods_info.now_price}}</text>
          <text>x1</text>
        </view>
      </view>
      <view class="discount">
        <view class="total">
          <text>商品总价</text>
          <text>￥{{goods_info.price}}</text>
        </view>
        <view class="Actual">
          <text>订单总价</text>
          <text>￥{{goods_info.now_price}}</text>
        </view>
      </view>
      <view class="payment">
        <text>实付款</text>
        <text>￥{{goods_info.now_price}}</text>
      </view>
    </view>
    <view class="Code-wrapper">
      <view>
        <text>订单编号: </text>
        <text>{{goods_info.order_num}}</text>
      </view>
      <view>
        <text>下单时间：</text>
        <text>{{goods_info.create_time}}</text>
      </view>
    </view>
    <view class="footer">
      <text class="pay-text">实付:</text>
      <text class="pay-money">￥{{goods_info.now_price}}</text>
      <text wx:if="{{goods_info.status == 1}}" class="pay-btn {{payState == true ? '' : 'disabled'}}" @tap="buy">立即付款</text>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  import BargainModel from './Bargain-model'
  export default class Index extends wepy.page {
    config = {
      navigationBarTitleText: '确定订单',
      navigationBarBackgroundColor: '#faf9f9'
    }
    data = {
      AddressInfo: {},
      orderId: '',
      goods_info: '',
      requirePhone: '',
      payState: true,
      real_tel:'',
      choose_address:''
    }
    methods = {
      getAddress(){
        if(this.goods_info.status != 1){
          return false
        }
        let that = this;
        wx.chooseAddress({
          success: function (res) {
            that.AddressInfo.shipping_name = res.userName
            that.AddressInfo.shipping_postcode = res.postalCode
            that.AddressInfo.shipping_province = res.provinceName
            that.AddressInfo.shipping_city = res.cityName
            that.AddressInfo.shipping_area = res.countyName
            that.AddressInfo.shipping_street = res.detailInfo
            that.AddressInfo.shipping_tel = res.telNumber
            if(!that.payState){
              that.payState = true
            }
            that.$apply()
          }
        })
      },
      phoneInput($event){
         this.requirePhone = $event.detail.value.trim()
      },
      buy(){
        if(!this.AddressInfo.shipping_name && this.choose_address == 1) {
          wx.showToast({
            title: '请填写收货地址',
            icon:'loading',
            duration: 1000,
            mask: true,
          })
          return false
        }
        if(Number(this.requirePhone.length) == 0){
          wx.showToast({
            title: '请输入手机号码',
            icon:'loading',
            duration: 1000,
            mask: true,
          })
          return false
        }
        if(Number(this.requirePhone.length) <= 10){
          wx.showToast({
            title: '手机长度不足',
            icon:'loading',
            duration: 1000,
            mask: true,
          })
          return false
        }
        if(!(/^1[345789]\d{9}$/.test(this.requirePhone))){
          wx.showToast({
            title: '手机格式错误',
            icon:'loading',
            duration: 1000,
            mask: true,
          })
          return false;
        }

        let param = {
          launch_id: this.launch_id,
          real_tel: this.requirePhone
        }
        Object.assign(param,this.AddressInfo)
        this.payState = false
        this.$apply()
        BargainModel.execPay(param, ResData=>{
          if(ResData.code == 1) {
            BargainModel.wxPay(ResData.data, ResData=>{
              // 支付成功以后, 跳转到状态页面 把防止重复提交的订单状态变量设置成 true
              if(ResData == 2) {
                this.payState = true
                this.$apply()
                wx.navigateTo({
                  url: '../Goods/pay-result'
                });
              }
              // 取消支付以后,也需要把支付状态变量设置成 true
              if(ResData == 1) {
                this.payState = true
                this.$apply()
              }
            })
            return false
          }
          if(ResData.code == 0){
            wx.showToast({
              title: '支付异常,请返回',
              icon: 'success',
              duration: 1200
            })
            this.vipState = false
            this.$apply()
            return false
          }
          if(ResData.code == 2){
            wx.showToast({
              title: '没有库存了',
              icon: 'success',
              duration: 1200
            })
            this.vipState = false
            this.$apply()
            return false
          }
          if(ResData.code == 3){
            wx.showToast({
              title: '订单不是未支付',
              icon: 'success',
              duration: 1200
            })
            this.vipState = false
            this.$apply()
            return false
          }
          if(ResData.code == 4){
            wx.showToast({
              title: '商品已经下架了',
              icon: 'success',
              duration: 1200
            })
            this.vipState = false
            this.$apply()
            return false
          }
          if(ResData.code == 5){
            wx.showToast({
              title: '非法操作订单',
              icon: 'success',
              duration: 1200
            })
            this.vipState = false
            this.$apply()
            return false
          }
          if(ResData.code == 6){
            wx.showToast({
              title: '订单超时,失败了',
              icon: 'success',
              duration: 1200
            })
            this.vipState = false
            this.$apply()
            return false
          }
          if(ResData.code == 7){
            wx.showToast({
              title: '活动过期了',
              icon: 'success',
              duration: 1200
            })
            this.vipState = false
            this.$apply()
            return false
          }
          wx.showToast({
            title: ResData.message,
            icon: 'loading',
            duration: 1500
          })
        })
      },
    }
    onLoad(options){
      this.launch_id = options.launch_id
      BargainModel.orderDetail({launch_id:this.launch_id}, (ResData)=>{
        if(ResData.code == 1){
          this.goods_info = ResData.data
          this.AddressInfo.shipping_name = this.goods_info.shipping_name || ''
          this.AddressInfo.shipping_province = this.goods_info.shipping_province || ''
          this.AddressInfo.shipping_city = this.goods_info.shipping_city || ''
          this.AddressInfo.shipping_area = this.goods_info.shipping_area || ''
          this.AddressInfo.shipping_street = this.goods_info.shipping_street || ''
          this.AddressInfo.shipping_tel = this.goods_info.shipping_phone || ''
          this.choose_address = this.goods_info.choose_address || ''
          this.real_tel = this.goods_info.real_tel || ''
          this.requirePhone = this.goods_info.real_tel || ''
        }
        this.$apply()
      })
    }
  }
</script>

