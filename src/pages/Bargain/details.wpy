          // if(posterPic && typeof(posterPic) == 'object' && posterPic[1] == this.DetailData.floor_price && posterPic[2] == this.DetailData.price){
          //   this.posterImg = posterPic[0]
          //   this.showPosterBox = true
          //   wx.hideLoading()
          //   this.$apply()
          //   return false
          // }
          let param = {}
          param.id = this.DetailData.id
          param.type = 3
          this.actionSheetHidden =  true
          BargainModel.getPostData1(param,ResData=>{
