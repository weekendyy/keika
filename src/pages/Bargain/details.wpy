        this.showAdWindow = true
        this.$apply()
      },
      closeAdWindow(){
        this.showAdWindow = false
        this.$apply()
      },
      contactBack(){
        this.showAdWindow = false
        this.$apply()
      }
    }
    onLoad(options){
      if(options.dis_id){
        this.disId = options.dis_id
      }
      this.shopId = BargainModel.shopConfig.shopID
      this.activity_id = options.id
      this.formId = options.formID
      if(options.launch_id){
        this.param = {
          launch_id: options.launch_id,
        }
      }
      this.param.activity_id = options.id
      if(this.formId){
        this.param.magic_form_id = this.formId
      }
      BargainModel.getcommunityData({},(res)=>{
        if(res.code == 0){
          if(res.data){
            this.adData = res.data
          }
          this.$apply()
        }
      })
      BargainModel.getMoreRecommend((res)=>{
        if(res.code == 1){
          this.moregoods = res.data
          this.$apply()
        }else{
          BargainModel.showTips(res.message)
        }
      })
    }
    onShow(){
      clearInterval(timer)
      let that = this
      // if(wx.getStorageSync('launch_id')){
      //   this.param.launch_id = wx.getStorageSync('launch_id')
      // }
      this.loadBarginData(this)
    }
    loadBarginData(that){
      if(this.disId){
        this.param.dis_id = this.disId
      }
      BargainModel.getLuckyDetail(that.param,(ResData)=>{
        that.DetailData = ResData.activity_attr
        that.bargain = ResData.bargain
        that.floor_data = ResData.floor_data
        that.rules = ResData.rule_str
        that.isOne = ResData.bargain.launch.help_count
        that.isTakePartIn = ResData.is_self_help
        that.loadingHidden = true
        if(wx.getStorageSync('launch_id')){
          wx.removeStorage({
            key: 'launch_id'
          })
        }
        if(ResData.activity_attr.status == 1 || ResData.activity_attr.status == 2) {
          that.end_time = ResData.activity_attr.residue_time * 1000
          countdown(that)
        }
        if(ResData.bargain.code == 1 && ResData.bargain.is_own == 0){
          // 如果砍到底价 就提示砍到底价 渲染最新价格 和人数
          if(ResData.bargain.launch.is_minimum == 1){
            this.isBottomPrice = true
            this.bargain_price = ResData.bargain.bargain_price
            this.showBarginSuccess = true
            that.$apply()
            return false
          }
          if(ResData.bargain.launch.is_minimum == 0){
            this.bargain_price = ResData.bargain.bargain_price
            this.showBarginSuccess = true
            that.$apply()
            return false
          }
        }
        that.$apply()
      })
    }
    onShareAppMessage(res){
      this.userInfo = wx.getStorageSync('userInfo')
      let that = this;
      let shareTitle = null;
      let path = '';
      if(that.DetailData){
        path = '/pages/Bargain/details?id='+that.activity_id+"&"+'launch_id='+that.bargain.launch.id
        shareTitle = '帮好友['+ this.userInfo.nickName + ']砍价 ' + that.DetailData.title
      }
      if(!that.DetailData){
        path = '/pages/index/index'
      }
      console.log(shareTitle)
      let shareObj = {
        title: shareTitle,
        path: path,
        success: ()=>{
          BargainModel.transmit_num({activity_id:that.param.activity_id},()=>{
            wx.showToast({
              title: '转发成功',
              icon: 'success',
              duration: 1500
            })
            that.DetailData.share_num++
          })
          this.actionSheetHidden = true
          this.$apply()
        }
      }
      return shareObj
    }
    onReachBottom(){
      if(!this.isLoadAll && this.lastLoadList.length != 0){
        this.page++
        wx.showLoading({
          title:'加载中...'
        })
        BargainModel.getBargainLoad({activity_id: this.param.activity_id, page: this.page},(ResData)=>{
          // 砍价排行榜
          let isLoadAll = this._isLoadAll(this.lastLoadList,ResData)
          wx.hideLoading()
          if(isLoadAll){
            this.isLoadAll = true
            wx.showToast({
              title: '已经到底了',
              icon: 'loading',
              duration: 1500
            })
          }else{
            this.lastLoadList = ResData
            this.RankingData = [...this.RankingData, ...ResData]
            this.$apply()
          }
        })
      }
    }
    onPageScroll(e){
      if(!this.secondLoad){
        wxParse.wxParse('article1', 'html', this.DetailData.prize_details, this, 5)
        wxParse.wxParse('article2', 'html', this.DetailData.details, this, 5)
        this.secondLoad = true
        BargainModel.getBargainLoad({activity_id: this.param.activity_id, page: 1},(ResData)=>{
          // 砍价排行榜
          if(ResData[0].openid == ''){
            this.RankingData = []
            this.lastLoadList = []
          } else {
            this.RankingData = ResData
            this.lastLoadList = ResData
          }
          this.$apply()
        })
      }
    }
    onHide(){
      clearInterval(timer)
    }
    onUnload(){
      clearInterval(timer)
    }
    _isLoadAll(objA,objB){
      if(objA[0].openid == objB[0].openid){
        return true
      }
      return false
    }
  }
