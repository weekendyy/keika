      <!--进行中  -->
      <block wx:if="{{DetailsData.new_time_status == 1}}">
        <button open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="buyGoods" wx:if="{{buy_log == 1}}" class="Buy">
