<script>
  import wepy from 'wepy'
  import OrderModel from './order-model'
  export default class Index extends wepy.page {
    config = {
      navigationBarTitleText: '秒杀订单详情'
    }
    data = {
      loadingHidden: true,
      DetailsData: '',
      groupsData: null,
      orderID: '',
    }
    methods = {
      gotoDestory(){
        wx.navigateTo({
          url: './coupon?id='+ this.orderID
        })
      },
      orderEvaluate(){
        wx.navigateTo({
          url: './evaluate-details?orderId='+ this.orderID
        })
      },
      orderPayment(){
        wx.navigateTo({
          url: '/pages/Goods/Confirm-order?orderId='+ this.orderID
        })
      },
      /*   删除订单 */
      delOrder(){
        OrderModel.del_order(this.orderID, ResData=>{
          if (Number(ResData.code) == 1){
            wx.showToast({
              title: "删除成功",
              icon:'loading',
              duration: 500,
              mask: true,
            })
          }
          setTimeout(()=>{
            wx.navigateBack({
              delta: 1
            })
          }, 1000)
        })
      },
    }
    onLoad(options){
      this.orderID = options.id
    }
    onShow(){
      OrderModel.getMyOrderInfoById(this.orderID, ReaData=> {
        if(ReaData.code ==1) {
          this.DetailsData = ReaData.data
          this.loadingHidden = true
          this.$apply()
        }
      })
    }
  }
</script>
