        <text>付款时间:</text>
        <text>{{DetailsData.pay_time}}</text>
      </view>
    </view>
    <view class="footer">
        <!--订单成功 或者 订单取消掉的时候 -->
        <text class="del-order" wx:if="{{DetailsData.status == 4 || DetailsData.status == 0}}" @tap.stop="delOrder()">删除订单</text>
        <!--待付款-->
        <text class="payment" wx:if="{{DetailsData.status == 1}}" @tap="orderPayment">去支付</text>
        <!--待评价-->
        <text class="payment" wx:if="{{DetailsData.status == 3}}" @tap="orderEvaluate">去评价</text>
