        display: flex;
        align-items: center;
        justify-content: space-around;
        .dataItem{
          display: flex;
          flex-direction: column;
          align-items: center;
          height: 100%;
          justify-content: center;
          flex: 1;
          .itemNumber{
            color: #3E4552;
            font-size: 38rpx;
            font-weight: 600;
          }
          .itemtxt{
            font-size: 25rpx;
            color: #A0A8B8;
            margin-top: 10rpx;
          }
        }
        .cut1{
          width: 1px;
          height: 70rpx;
          background-color: #F0F2F6;
        }
      }
      .cut2{
        position: absolute;
        width: 32rpx;
        height: 32rpx;
        top: 84rpx;
        left: -16rpx;
        border-radius: 100%;
        background-color: #F8F9F9;
        box-shadow: -10rpx 0 20rpx rgba(152,152,152,0.2) inset;
      }
      .cut3{
        position: absolute;
        width: 32rpx;
        height: 32rpx;
        top: 84rpx;
        right: -16rpx;
        border-radius: 100%;
        background-color: #F8F9F9;
        box-shadow: 10rpx 0 20rpx rgba(152,152,152,0.2) inset;
      }
      .empolyeeBottom{
        width: 100%;
        height: 70rpx;
        background-color: #EDEDED;
