      color: #999;
      font-size: 35rpx;
      font-weight: 600;
    }
    .empolyeeItem{
      width: 100%;
      border-radius: 10rpx;
      box-shadow: 0 0 20rpx rgba(152,152,152,.4);
      margin-bottom: 30rpx;
      background-color: #fff;
      position: relative;
      .empolyeeHead{
        width: 100%;
        height: 100rpx;
        border-bottom: 1px dashed #E1E1E1;
        display: flex;
        align-items: center;
        justify-content: space-between;
        text{
          margin-left: 40rpx;
          font-size: 30rpx;
          color: #3E4552;
          margin-right: 40rpx;
        }
        .zhangaho{
          max-width: 420rpx;
          overflow: hidden;
          text-overflow: ellipsis;
