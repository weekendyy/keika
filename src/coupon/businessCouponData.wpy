<script>
  import wepy from 'wepy'
  import CouponModel from './coupon-model.js'
  export default class extends wepy.page {
    config = {
      navigationBarBackgroundColor: "#2781FB",
      navigationBarTitleText: '商家名称',
      backgroundColorTop: '#2781FB',
      backgroundColorBottom: '2781FB',
      navigationBarTextStyle: 'white'
    }
    data = {
      loadingHidden: false,
      pageNum: 1,
      indexData: '',
      fixedData: '',
      couponInfo: '',
      isLoadAll: false,
      qrImg: '',
      showQR: false,
      adminName: '',
      dataTapIndex: 0,
      dataBill: ''
    }
    computed = {
        
    }
    methods = {
      myQRCode(id){
        console.log(id)
        if(typeof(id) == 'object'){
          CouponModel.showTips("未创建优惠券")
          return false
        }
        let qrPic = wx.getStorageSync('qrPic_'+ id + this.couponInfo.admin_id)
        if(qrPic){
          this.qrImg = qrPic
          this.showQR = true
          this.$apply()
          return false
        }
        CouponModel.showTips('二维码下载中..')
        let query = {
          adminId: this.couponInfo.admin_id,
          activeId: id
        }
        CouponModel.getMyQrCode(query, (res)=>{
          if(res.code == 1){
            wx.hideLoading()
            wx.downloadFile({
              url: res.data.data,
              success: (res1)=>{
                wx.setStorageSync('qrPic_'+ id + this.couponInfo.admin_id, res1.tempFilePath)
                this.qrImg = res1.tempFilePath
                this.showQR = true
                this.$apply()
              },
              fail: (res2)=>{
                console.log(res2)
              }
            })
          }
        })
      },
      toLogin(){
        wx.redirectTo({
          url: './couponLogin'
        })
      },
      closeQr(){
        this.showQR = false
        this.$apply()
      },
      savePic(){
        let that = this
        wx.showLoading({title:'保存中...'})
        let posterPic =  this.qrImg
        console.log(posterPic)
        wx.saveImageToPhotosAlbum({
          filePath: posterPic,
          success:()=>{
            wx.showToast({
              title: '保存成功！',
              icon: 'success',
              duration: 1000
            })
            that.showQR = false
            that.$apply()
          },
          fail:(e)=>{
            that.showQR = false
            that.$apply()
            wx.showToast({
              title: '保存失败！',
              icon: 'success',
              duration: 1000
            })
          }
        })
      },
      toMyData(activeId){
        CouponModel.navTo("./myCouponData", {adminId: this.couponInfo.admin_id, activeId: activeId})
      },
      toCouponData(activeId){
        CouponModel.navTo("./activeCouponData", {adminId: this.couponInfo.admin_id, activeId: activeId})
      },
      fullimg(){
        wx.previewImage({
          current: this.qrImg,
          urls: [this.qrImg]
        })
      },
      dataTap(index){
        this.dataTapIndex = index
        if(index === '0'){
          this.dataBill = this.indexData.bill_total
          this.$apply()
          return false
        }
        if(index === '1'){
          this.dataBill = this.indexData.this_month_bill_total
          this.$apply()
          return false
        }
        if(index === '2'){
          this.dataBill = this.indexData.last_month_bill_total
          this.$apply()
          return false
        }
        if(index === '3'){
          this.dataBill = this.indexData.today_bill_total
          this.$apply()
          return false
        }
        if(index === '4'){
          this.dataBill = this.indexData.yesterday_bill_total
          this.$apply()
          return false
        }
      }
    }
    onLoad(e){
      this.couponInfo = wx.getStorageSync('couponInfo')
      this.adminName = wx.getStorageSync('adminName')
      let query = {
        admin_id: this.couponInfo.admin_id,
        pageNum: this.pageNum
      }
      CouponModel.getCouponDataList(query, (res)=>{
        if(res.code == 1){
          this.indexData = res.data
          this.fixedData = res.content_str
          this.dataBill = res.data.bill_total
          wx.setNavigationBarTitle({
            title: res.data.data[0].magicshop.magic_shop_name
          })
          this.loadingHidden = true
          this.$apply()
        } else {
          CouponModel.showTips(res.message)
        }
      })
    }
    onShow(){
    }
    onReachBottom(){
      if(!this.isLoadAll){
        this.pageNum++
        let query = {
          admin_id: this.couponInfo.admin_id,
          pageNum: this.pageNum
        }
        CouponModel.getCouponDataList(query, (res)=>{
          if(res.code == 1){
            if(res.data.data.length == 0){
              CouponModel.showTips("已经到底了")
              this.isLoadAll = true
              this.$apply()
            }
            this.indexData.data = [...this.indexData.data, ...res.data.data]
            this.$apply()
          } else {
            CouponModel.showTips(res.message)
          }
        })
      }
    }
  }
</script>
