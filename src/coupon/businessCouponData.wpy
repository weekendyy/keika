      <view class="shadow" wx:if="{{showQR}}" @tap="closeQr"></view>
      <image src="{{qrImg}}" mode="widthFix" class="qrPic {{showQR?'showQr':''}}" @tap="fullimg"></image>
      <view @tap="savePic" class="savePic {{showQR?'showsavePic':''}}">保存图片</view>
    </view>
